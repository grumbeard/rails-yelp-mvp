<h1>Here are all the restaurants</h1>
<div class="restaurant-list text-center">
  <ol class="text-left my-5">
    <% @restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant %></li>
    <% end %>
  </ol>
    <%= link_to 'Add restaurant', new_restaurant_path(@restaurant), class: 'btn btn-primary' %>
</div>
